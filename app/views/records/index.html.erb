<h1>Listing records</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Domain</th>
    <th>Name</th>
    <th>Type</th>
    <th>Content</th>
    <th>Ttl</th>
    <th>Prio</th>
    <th>Change date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><%= record.name %></td>
    <td><%= record.domain_id %></td>
    <td><%= record.name %></td>
    <td><%= record.type %></td>
    <td><%= record.content %></td>
    <td><%= record.ttl %></td>
    <td><%= record.prio %></td>
    <td><%= record.change_date %></td>
    <td><%= link_to 'Show', record %></td>
    <td><%= link_to 'Edit', edit_record_path(record) %></td>
    <td><%= link_to 'Destroy', record, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

